<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FoodPlace_Item_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/FoodPlace_Item_Layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/FoodPlace_Item_Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FoodPlace_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/FoodPlace_RatingBar"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FoodPlace_Item_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/FoodPlace_Image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/shop_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fdpltxtview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_place_address"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/FoodPlace_Address_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/fdpltxtview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inapp_rating"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/FoodPlace_Inapp_Rating_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/FoodPlace_InApp_Rating_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|bottom"
                        android:layout_weight="0.33"
                        android:fontFamily="serif-monospace"
                        android:gravity="top|bottom"
                        android:text="100"
                        android:textAlignment="center"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/FoodPlace_Like_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/like_icon" />

                    <ImageButton
                        android:id="@+id/FoodPlace_Dislike_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/dislike_icon" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fdpltxtview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|bottom"
                    android:layout_weight="1"
                    android:foregroundGravity="top|bottom"
                    android:gravity="top|bottom"
                    android:text="can add more info here"
                    android:textAlignment="center" />

            </LinearLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/FoodPlace_Map"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
