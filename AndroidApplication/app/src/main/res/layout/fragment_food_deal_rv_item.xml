<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_deal_rv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/food_deal_like_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_thumb_up_black_24dp" />

            <TextView
                android:id="@+id/food_deal_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|bottom"
                android:text="100"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/food_deal_dislike_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_thumb_down_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/food_deal_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:srcCompat="@drawable/food_deal_placeholder" />

            <TextView
                android:id="@+id/food_deal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>
